<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Read</title>
</head>
<body class="bg-zinc-900 p-10 text-white">
    <a class="text-blue-500 underline" href="/">Back to Home</a>
    <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
    <div class="users flex flex-wrap gap-3">
        <% if(users.length > 0) { %>
            <% users.forEach(function(user){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-zinc-500 overflow-hidden">
                        <img class="w-full h-full object-cover" src="<%= user.image %>" alt="<%= user.name %>'s image">
                    </div>
                    <h3 class="text-xl mt-3 tracking-tighter"><%= user.user %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-3 justify-between mt-3">
                        <a class="text-zinc-500" href="/edit/<%= user._id %>">Edit User</a>
                        <a class="text-red-600" href="/delete/<%=  user._id %>">Delete User</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h3 class="text-zinc-500 text-2xl">No Users yet☹️</h3>
        <% } %>
    </div>
</body>

</html>